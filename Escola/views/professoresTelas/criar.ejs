<%- include('../includes/header.ejs', {titulo: 'Adicionar professor' }) %>
    <main>
        <h2>Adicionar novo professor</h2>
        <form action="/professores/novo" method="POST" class="form">
            <div class="form-group">
                <label for="nome_professor">Nome do professor</label>
                <input type="text" id="nome_professor" name="nome_professor" required/>
            </div>
            <div class="form-group">
                <label for="telefone">Telefone do professor</label>
                <input type="text" id="telefone" name="telefone" required/>
            </div>
            <div class="form-group">
                <label for="formacao">Formação do professor</label>
                <input type="text" id="formacao" name="formacao" required/>
            </div>
            <button type="submit" class="btn btn-primary">Adicionar</button>
            <a href="/professores" class="btn btn-secondary">Cancelar</a>
        </form>
    </main>
<%- include('../includes/footer.ejs') %>